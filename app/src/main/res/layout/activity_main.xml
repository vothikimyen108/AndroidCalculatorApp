<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity"
    android:layout_marginTop="10dp"


    >

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Máy Tính "
        android:textColor="#009624"
        android:textSize="30dp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="148dp"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:orientation="vertical" >


        <TextView
            android:id = "@+id/txtPhepToan"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginBottom="10dp"
            android:background="#5efc82"
            android:gravity="center"
            android:textColor="#000"
            android:textSize="20dp" />

        <TextView
            android:id = "@+id/txtKetQua"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:layout_marginBottom="10dp"
            android:background="#5efc82"
            android:gravity="center"
            android:textColor="#000"
            android:textSize="20dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="20dp">

        <Button
            android:id ="@+id/btXoa"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginLeft="25dp"
            android:text="C"
            android:textSize="28sp"
            app:backgroundTint="#00C853" />
        <Button
            android:id ="@+id/btNgoac"
            android:text="()"
            android:textSize="28sp"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginLeft="25dp"
            app:backgroundTint="#00C853" />
        <Button
            android:id ="@+id/btPhanTram"
            android:text="%"
            android:textSize="28sp"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginLeft="25dp"
            app:backgroundTint="#00C853" />
        <Button
            android:id ="@+id/btCong"
            android:text="+"
            android:textSize="28sp"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginLeft="25dp"
            app:backgroundTint="#00C853" />
      </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" android:layout_marginBottom="20dp">
        <Button
            android:id ="@+id/btSo7"
            android:text="7"
            android:textSize="28sp"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginLeft="25dp"
            app:backgroundTint="#00C853" />
        <Button
            android:id ="@+id/btSo8"
            android:text="8"
            android:textSize="28sp"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginLeft="25dp"
            app:backgroundTint="#00C853" />
        <Button
            android:id ="@+id/btSo9"
            android:text="9"
            android:textSize="28sp"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginLeft="25dp"
            app:backgroundTint="#00C853" />
        <Button
            android:id ="@+id/btNhan"
            android:text="*"
            android:textSize="28sp"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginLeft="25dp"
            app:backgroundTint="#00C853" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" android:layout_marginBottom="20dp">
        <Button
            android:id ="@+id/btSo4"
            android:text="4"
            android:textSize="28sp"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginLeft="25dp"
            app:backgroundTint="#00C853" />
        <Button
            android:id ="@+id/btSo5"
            android:text="5"
            android:textSize="28sp"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginLeft="25dp"
            app:backgroundTint="#00C853" />
        <Button
            android:id ="@+id/btSo6"
            android:text="6"
            android:textSize="28sp"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginLeft="25dp"
            app:backgroundTint="#00C853" />
        <Button
            android:id ="@+id/btTru"
            android:text="-"
            android:textSize="28sp"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginLeft="25dp"
            app:backgroundTint="#00C853" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" android:layout_marginBottom="20dp">
        <Button
            android:id ="@+id/btSo1"
            android:text="1"
            android:textSize="28sp"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginLeft="25dp"
            app:backgroundTint="#00C853" />
        <Button
            android:id ="@+id/btSo2"
            android:text="2"
            android:textSize="28sp"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginLeft="25dp"
            app:backgroundTint="#00C853" />
        <Button
            android:id ="@+id/btSo3"
            android:text="3"
            android:textSize="28sp"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginLeft="25dp"
            app:backgroundTint="#00C853" />
        <Button
            android:id ="@+id/btChia"
            android:text="/"
            android:textSize="28sp"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginLeft="25dp"
            app:backgroundTint="#00C853" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" android:layout_marginBottom="20dp">

        <Button
            android:id ="@+id/btSo0"
            android:text="0"
            android:textSize="28sp"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginLeft="28dp"
            app:backgroundTint="#00C853" />

        <Button
            android:id ="@+id/btCham"
            android:text="."
            android:textSize="28sp"
            android:layout_width="163dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="28dp"
            app:backgroundTint="#00C853" />

        <Button
            android:id ="@+id/btBang"
            android:text="="
            android:textSize="28sp"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginLeft="28dp"
            app:backgroundTint="#00C853" />
    </LinearLayout>



</LinearLayout>